<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="landlord_management_view_form" model="ir.ui.view">
            <field name="name">landlord_management_view_form</field>
            <field name="model">landlord.management</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sex_type"/>
                            <field name="info"/>
                            <field name="birthday"/>
                            <field name="phone_number"/>
                            <field name="cellphone"/>
                            <field name="current_address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="landlord_management_view_tree" model="ir.ui.view">
            <field name="name">landlord_management_view_tree</field>
            <field name="model">landlord.management</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="landlord_management_view_action" model="ir.actions.act_window">
            <field name="name">landlord_management_view_action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">landlord.management</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <menuitem id="landlord_management_menu"
                  name="房東管理"
                  parent="safereport_view_root"
                  action="landlord_management_view_action"
                  sequence="3"/>
    </data>
</odoo>